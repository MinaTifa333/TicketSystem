@page "/Account/AccessDenied"
@rendermode InteractiveServer

<PageTitle>تم رفض الوصول</PageTitle>

<div dir="rtl" class="d-flex flex-column justify-content-center align-items-center min-vh-100 bg-light" style="direction: rtl;">
    <div class="text-center p-4 p-md-5 rounded-3 shadow-lg bg-white position-relative overflow-hidden" style="max-width: 500px; border-top: 4px solid #dc3545;">
        <!-- تأثير خلفي ديناميكي -->
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: radial-gradient(circle at center, rgba(220,53,69,0.05) 0%, transparent 70%); z-index: 0;"></div>

        <!-- أيقونة متحركة -->
        <div class="mb-4 position-relative" style="z-index: 1;">
            <i class="bi bi-shield-lock-fill text-danger" style="font-size: 5rem; transition: all 0.4s ease;"></i>
        </div>

        <!-- المحتوى -->
        <div class="position-relative" style="z-index: 1;">
            <h1 class="text-danger fw-bold mb-3 display-5">تم رفض الوصول</h1>
            <p class="text-secondary mb-4 fs-5 lh-base">
                عذرًا، ليس لديك الصلاحية الكافية للوصول إلى هذه الصفحة.
                <span class="d-block mt-2">يرجى التواصل مع مسؤول النظام إذا كنت تعتقد أن هذا خطأ.</span>
            </p>

            <!-- زر تفاعلي -->
            <button class="btn btn-primary px-4 py-3 fw-semibold rounded-pill position-relative"
                    style="transition: all 0.3s ease; min-width: 180px;"
                    @onclick="GoBack">
                <span class="position-relative">
                    العودة للرئيسية
                    <i class="bi bi-arrow-left me-2"></i>
                </span>
            </button>
        </div>
    </div>
</div>

@code {
    [Inject] NavigationManager Navigation { get; set; }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }
}