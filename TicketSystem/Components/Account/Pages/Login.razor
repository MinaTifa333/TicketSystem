</style>

@code {
    private string? loginErrorMessage;
    private bool isLoadingLogin = false;

    [SupplyParameterFromForm]
    private LoginInputModel LoginInput { get; set; } = new();

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    public async Task LoginUser()
    {
        if (LoginInput == null)
        {
            loginErrorMessage = "خطأ: النموذج غير متوفر.";
            return;
        }

        isLoadingLogin = true;
        StateHasChanged();

        try
        {
            string? userNameToUse = LoginInput.Identifier;

            if (LoginInput.Identifier.Contains("@"))
            {
                var userByEmail = await UserManager.FindByEmailAsync(LoginInput.Identifier);
                if (userByEmail != null)
                {
                    userNameToUse = userByEmail.UserName;
                }
            }

            var result = await SignInManager.PasswordSignInAsync(userNameToUse, LoginInput.Password, LoginInput.RememberMe, lockoutOnFailure: false);

            if (result.Succeeded)
            {
                RedirectManager.RedirectTo(ReturnUrl);
            }
            else if (result.RequiresTwoFactor)
            {
                RedirectManager.RedirectTo("Account/LoginWith2fa", new()
                    {
                        ["returnUrl"] = ReturnUrl,
                        ["rememberMe"] = LoginInput.RememberMe
                    });
            }
            else if (result.IsLockedOut)
            {
                RedirectManager.RedirectTo("Account/Lockout");
            }
            else
            {
                loginErrorMessage = "محاولة تسجيل دخول غير صالحة.";
            }
        }
        finally
        {
            isLoadingLogin = false;
            StateHasChanged();
        }
    }

    private sealed class LoginInputModel
    {
        [Required(ErrorMessage = "اسم المستخدم أو البريد الإلكتروني مطلوب.")]
        public string Identifier { get; set; } = "";

        [Required(ErrorMessage = "كلمة المرور مطلوبة.")]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        [Display(Name = "تذكرني")]
        public bool RememberMe { get; set; }
    }
}
