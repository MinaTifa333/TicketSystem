@page "/Account/Login"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using TicketSystem.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ILoggerFactory LoggerFactory
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>تسجيل الدخول</PageTitle>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="row w-100">
        <div class="col-lg-6 mx-auto">
            <div class="card shadow-lg rounded-4 border-0 position-relative overflow-hidden">
                <div class="card-body p-4 p-md-5 bg-white position-relative">
                    <h2 class="text-center mb-4">تسجيل الدخول</h2>

                    @if (!string.IsNullOrEmpty(loginErrorMessage))
                    {
                        <div class="alert alert-danger text-center">@loginErrorMessage</div>
                    }

                    <EditForm Model="LoginInput" OnValidSubmit="LoginUser" FormName="LoginUserForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger mb-3" />

                        <div class="form-floating mb-3">
                            <InputText @bind-Value="LoginInput.Identifier" id="identifier" class="form-control" placeholder="name@example.com" />
                            <label for="identifier">اسم المستخدم أو البريد الإلكتروني</label>
                            <ValidationMessage For="() => LoginInput.Identifier" class="text-danger" />
                        </div>

                        <div class="form-floating mb-3">
                            <InputText @bind-Value="LoginInput.Password" id="password" type="password" class="form-control" placeholder="••••••••" />
                            <label for="password">كلمة المرور</label>
                            <ValidationMessage For="() => LoginInput.Password" class="text-danger" />
                        </div>

                        <div class="form-check mb-3">
                            <InputCheckbox @bind-Value="LoginInput.RememberMe" class="form-check-input" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">تذكرني</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 mb-3" disabled="@isLoadingLogin">
                            @(isLoadingLogin ? "جارٍ تسجيل الدخول..." : "تسجيل الدخول")
                        </button>

                        <div class="text-center mt-4 small text-muted">
                            <a href="/Account/ForgotPassword" class="text-decoration-none text-secondary me-2">
                                نسيت كلمة المرور؟
                            </a>
                            <span class="mx-1 text-muted">|</span>
                            <a href="/Account/Register" class="text-decoration-none text-primary fw-semibold ms-2">
                                إنشاء حساب جديد
                            </a>
                        </div>

                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
